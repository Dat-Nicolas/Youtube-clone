<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-3 mt-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" style="height: 16rem; object-fit: cover;"
                     src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h6 class="card-title" style="">{{this.name}}</h6>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    {{!-- <a href="#" class="btn btn-primary">Xem thÃªm</a> --}}
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>