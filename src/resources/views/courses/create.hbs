<div class="mt-4" style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h3 style="text-align: center; color: #333; margin-bottom: 20px; font-family: 'Arial', sans-serif;">Đăng nội dung</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="name" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">Tên nội dung</label>
            <input type="text" class="form-control" id="name" name="name" placeholder=" Vui lòng nhập tên nội dung" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 14px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="description" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" placeholder=" Vui lòng nhập mô tả cho nội dung" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 14px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="videoId" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder=" Vui lòng nhập video ID" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 14px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="level" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">Yêu cầu trình độ</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Vui lòng nhập trình độ" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 14px;">
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%; padding: 10px; font-size: 16px; font-weight: bold; color: #fff; background-color: #007bff; border: none; border-radius: 4px; cursor: pointer; transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#0056b3'" onmouseout="this.style.backgroundColor='#007bff'">Thêm nội dung</button>
    </form>
</div>
