<div class="mt-4">
    <h3>Cập nhật nội dung</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên nội dung</label>
            <input type="text" class="form-control" placeholder=" Vui lòng nhập tên nội dung" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" placeholder=" Vui lòng nhập mô tả cho nội dung" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" placeholder=" Vui lòng nhập video ID" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Yêu cầu trình độ</label>
            <input type="text" class="form-control" placeholder="Vui lòng nhập trình độ" value="{{course.level}}" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>